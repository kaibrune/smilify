{
  "name": "smilify - Amazon Smile Reminder",
  "version": "1.0",
  "manifest_version": 3,
  "description": "An extension that reminds you to place your Amazon order via Amazon Smile.",
  "homepage_url": "https://kaibrune.github.io/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contentSettings", "notifications", "tabs"],
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.nl/*",
        "https://*.amazon.com/*",
        "https://*.amazon.es/*",
        "https://*.amazon.it/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.pl/*",
        "https://*.amazon.se/*"
      ],
      "js": ["app.js"]
    }
  ]
}
